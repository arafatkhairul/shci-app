# SHCI Voice Agent - Environment Configuration
# =============================================

# API Base URL Configuration
# --------------------------
# Backend API server URL (FastAPI)
NEXT_PUBLIC_API_BASE_URL=https://api-llm.nodecel.cloud

# WebSocket Configuration  
# ----------------------
# WebSocket server URL for real-time communication
NEXT_PUBLIC_WS_BASE_URL=wss://api-llm.nodecel.cloud

# STT WebSocket URL
NEXT_PUBLIC_STT_WS=wss://api-llm.nodecel.cloud/ws/stt

# Production WebSocket URL (for live deployment)
NEXT_PUBLIC_WS_PRODUCTION_URL=wss://api-llm.nodecel.cloud

# Development Configuration
# ------------------------
# Enable development mode features
NEXT_PUBLIC_DEV_MODE=true

# Application Configuration
# ------------------------
# Application name and version
NEXT_PUBLIC_APP_NAME=SHCI Voice Assistant
NEXT_PUBLIC_APP_VERSION=1.0.0

# Feature Flags
# -------------
# Enable/disable specific features
NEXT_PUBLIC_ENABLE_ROLEPLAY=true
NEXT_PUBLIC_ENABLE_TTS=true
NEXT_PUBLIC_ENABLE_STT=true
