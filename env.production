# SHCI Voice Assistant - Production Environment
# =============================================

# API Base URL Configuration
# --------------------------
# Production API server URL (FastAPI)
NEXT_PUBLIC_API_BASE_URL=https://nodecel.cloud

# WebSocket Configuration  
# ----------------------
# Production WebSocket server URL
NEXT_PUBLIC_WS_BASE_URL=wss://nodecel.cloud
NEXT_PUBLIC_WS_PRODUCTION_URL=wss://nodecel.cloud

# Development Configuration
# ------------------------
# Disable development mode for production
NEXT_PUBLIC_DEV_MODE=false

# Application Configuration
# ------------------------
# Application name and version
NEXT_PUBLIC_APP_NAME=SHCI Voice Assistant
NEXT_PUBLIC_APP_VERSION=1.0.0

# Feature Flags
# -------------
# Enable/disable specific features
NEXT_PUBLIC_ENABLE_ROLEPLAY=true
NEXT_PUBLIC_ENABLE_TTS=true
NEXT_PUBLIC_ENABLE_STT=true

# Backend Environment Variables
# ----------------------------
# FastAPI configuration
ENVIRONMENT=production
PYTHONPATH=/app

# LLM Configuration (External Ollama)
# -----------------------------------
# Ollama LLM service configuration
LLM_API_URL=http://host.docker.internal:11434/v1/chat/completions
LLM_MODEL=qwen2.5-14b-gpu
LLM_API_KEY=
LLM_TIMEOUT=10.0
LLM_RETRIES=1

# GPU Configuration for Production
# ---------------------------------
# CUDA settings
CUDA_VISIBLE_DEVICES=0,1
TORCH_DEVICE=cuda
TTS_DEVICE=cuda
WHISPER_DEVICE=cuda

# Model Configuration
# -------------------
# TTS model settings
TTS_MODEL_PATH=/app/Models
TTS_OUTPUT_PATH=/app/outputs
TTS_CACHE_PATH=/app/memdb
TTS_BATCH_SIZE=4
TTS_MAX_LENGTH=500

# Database Configuration
# ---------------------
# SQLite database path
DATABASE_URL=sqlite:///./roleplay.db

# TTS Configuration
# -----------------
# TTS model settings
TTS_MODEL_PATH=/app/Models
TTS_OUTPUT_PATH=/app/outputs
TTS_CACHE_PATH=/app/memdb

# Security Configuration
# ---------------------
# CORS settings
CORS_ORIGINS=["https://nodecel.cloud", "https://www.nodecel.cloud"]

# Rate Limiting
# -------------
# API rate limits
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# Logging Configuration
# --------------------
# Log level for production
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log

# Performance Configuration
# -------------------------
# Worker processes
WORKERS=4
MAX_CONNECTIONS=1000

# SSL Configuration
# -----------------
# SSL settings
SSL_VERIFY=true
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
