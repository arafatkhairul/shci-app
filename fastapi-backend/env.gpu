# ===================================================================
# SHCI Voice Assistant - GPU ENABLED Configuration
# ===================================================================
# This file is configured for GPU acceleration
# Copy this to .env for GPU-enabled server
# ===================================================================

# ===================================================================
# APPLICATION ENVIRONMENT (PRODUCTION WITH GPU)
# ===================================================================
TTS_ENVIRONMENT=production
ENVIRONMENT=production
NODE_ENV=production

# ===================================================================
# LLM CONFIGURATION
# ===================================================================
LLM_API_URL=http://69.197.183.130:11434/v1/chat/completions
LLM_MODEL=huihui-24b:Q4_K_M
LLM_API_KEY=
LLM_TIMEOUT=60.0
LLM_RETRIES=3

# ===================================================================
# TTS SYSTEM CONFIGURATION
# ===================================================================
TTS_SYSTEM=piper

# ===================================================================
# PIPER TTS CONFIGURATION (GPU ENABLED)
# ===================================================================
PIPER_MODEL_NAME=en_US-libritts-high
PIPER_LENGTH_SCALE=0.5
PIPER_NOISE_SCALE=0.667
PIPER_NOISE_W=0.8

# Device Configuration (GPU ENABLED)
PIPER_DEVICE=cuda
PIPER_FORCE_CUDA=true
CUDA_VISIBLE_DEVICES=0

# GPU optimization settings
TORCH_CUDA_ALLOC_CONF=max_split_size_mb:512
CUDA_CACHE_DISABLE=0

# ===================================================================
# AUDIO CONFIGURATION
# ===================================================================
TTS_OUTPUT_FORMAT=wav
TTS_SAMPLE_RATE=22050
DEFAULT_LANGUAGE=en

# ===================================================================
# VOICE ACTIVITY DETECTION (VAD)
# ===================================================================
TRIGGER_VOICED_FRAMES=2
END_SILENCE_MS=250
MAX_UTTER_MS=7000
MIN_UTTER_SEC=0.25
MIN_RMS=0.006

# ===================================================================
# CONCURRENCY CONFIGURATION (PRODUCTION)
# ===================================================================
STT_CONCURRENCY=2
TTS_CONCURRENCY=2

# ===================================================================
# ASSISTANT CONFIGURATION
# ===================================================================
ASSISTANT_NAME=Self Hosted Conversational Interface
ASSISTANT_AUTHOR=NZR DEV

# ===================================================================
# DATABASE CONFIGURATION
# ===================================================================
MEM_DB_DIR=memdb

# ===================================================================
# PRODUCTION OPTIMIZATIONS
# ===================================================================
DEV_MODE=false
DEBUG_TTS=false
DEBUG_STREAMING=false
TTS_VERBOSE_LOGGING=false
