# TTS Configuration Environment Variables
# Copy this to .env and modify as needed

# ===================== Environment Configuration =====================

# TTS Environment (local/development/production/live)
TTS_ENVIRONMENT=local
ENVIRONMENT=development
NODE_ENV=development

# TTS System Selection (piper/fallback)
# If not specified, will auto-select based on environment:
# - local/development: piper (if available) or fallback
# - production/live: piper (if available) or fallback
TTS_SYSTEM=piper

# ===================== Piper TTS Configuration =====================

# Piper TTS Model Configuration
PIPER_MODEL_NAME=en_US-ljspeech-high
PIPER_MODEL_PATH=en_US-ljspeech-high.onnx
PIPER_CONFIG_PATH=en_US-ljspeech-high.onnx.json

# Piper TTS Synthesis Parameters
PIPER_LENGTH_SCALE=1.5
PIPER_NOISE_SCALE=0.667
PIPER_NOISE_W=0.8

# Piper TTS Device Configuration
# Auto-detection: production=GPU, local=CPU
# Manual override options:
# PIPER_DEVICE=cuda    # Force GPU
# PIPER_DEVICE=cpu     # Force CPU
# PIPER_FORCE_CUDA=true   # Force CUDA even in local
# PIPER_FORCE_CPU=true    # Force CPU even in production

# Voice Configuration
TTS_LANGUAGE=en
TTS_SPEED=1.0
TTS_EMOTION=neutral
TTS_STYLE=normal

# Audio Configuration
TTS_SAMPLE_RATE=22050
TTS_FORMAT=wav
TTS_NORMALIZE=true
TTS_TRIM_SILENCE=true

# Performance Configuration
TTS_STREAMING=true
TTS_CHUNK_SIZE=1024
TTS_MAX_WORKERS=4
TTS_CACHE=true
TTS_CACHE_TTL=3600

# Real-time Configuration
TTS_REALTIME=true
TTS_LATENCY_TARGET=0.5
TTS_MAX_LATENCY=2.0
TTS_ADAPTIVE_SPEED=true

# ===================== Reference Audio Configuration =====================

# Default reference audio file (from simple_tts_test.py)
REFERENCE_VOICE_PATH=00005.wav
FALLBACK_SPEAKER=Tammie Ema

# ===================== Streaming Configuration =====================

# WebSocket streaming settings
WS_STREAMING_ENABLED=true
WS_CHUNK_SIZE=1024
WS_BUFFER_SIZE=4096
WS_STREAM_DELAY=0.1

# Concurrent streaming limits
MAX_CONCURRENT_STREAMS=10
MAX_STREAMERS=5

# ===================== Performance Optimization =====================

# Enable real-time optimizations
REALTIME_OPTIMIZATION=true
PRELOAD_MODELS=true
WARMUP_ENABLED=true
PARALLEL_PROCESSING=true

# Memory management
CACHE_ENABLED=true
CACHE_SIZE=100
CACHE_TTL=3600

# ===================== Logging Configuration =====================

# TTS logging level
TTS_LOG_LEVEL=INFO
STREAMING_LOG_LEVEL=INFO

# Enable detailed logging
TTS_VERBOSE_LOGGING=false
STREAMING_VERBOSE_LOGGING=false

# ===================== Development Configuration =====================

# Development mode settings
DEV_MODE=true
DEBUG_TTS=false
DEBUG_STREAMING=false

# Test configuration
TEST_TTS_ENABLED=true
TEST_STREAMING_ENABLED=true
TEST_REFERENCE_AUDIO=00005.wav

# ===================== Production Configuration =====================

# Production settings (set TTS_ENVIRONMENT=production to use these)
# TTS_ENVIRONMENT=production
# TTS_SYSTEM=piper
# DEV_MODE=false
# DEBUG_TTS=false
# DEBUG_STREAMING=false
