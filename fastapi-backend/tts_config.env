# TTS Configuration Environment Variables
# Copy this to .env and modify as needed

# ===================== Environment Configuration =====================

# TTS Environment (local/development/production/live)
TTS_ENVIRONMENT=production
ENVIRONMENT=production
NODE_ENV=production

# TTS System Selection (gtts/coqui/fallback)
# If not specified, will auto-select based on environment:
# - local/development: gtts (if available) or fallback
# - production/live: coqui (if available) or fallback
TTS_SYSTEM=coqui

# ===================== TTS (Coqui XTTS) Configuration =====================

# TTS Model Configuration
TTS_MODEL_NAME=tts_models/multilingual/multi-dataset/xtts_v2
TTS_MODEL_PATH=models/xtts_v2
TTS_DEVICE=auto
TTS_PRECISION=fp16
TTS_BATCH_SIZE=1
TTS_TEMPERATURE=0.7

# Voice Configuration
TTS_SPEAKER_ID=default
TTS_SPEAKER_WAV=00005.wav
TTS_LANGUAGE=en
TTS_SPEED=1.0
TTS_EMOTION=neutral
TTS_STYLE=normal

# Audio Configuration
TTS_SAMPLE_RATE=22050
TTS_FORMAT=wav
TTS_NORMALIZE=true
TTS_TRIM_SILENCE=true

# Performance Configuration
TTS_STREAMING=true
TTS_CHUNK_SIZE=1024
TTS_MAX_WORKERS=4
TTS_CACHE=true
TTS_CACHE_TTL=3600

# Real-time Configuration
TTS_REALTIME=true
TTS_LATENCY_TARGET=0.5
TTS_MAX_LATENCY=2.0
TTS_ADAPTIVE_SPEED=true

# ===================== gTTS Configuration (Local/Development) =====================

# Google TTS settings for local development
GTTS_ENABLED=false
GTTS_LANG=en
GTTS_SLOW=false
GTTS_TLD=com

# Audio processing for gTTS
GTTS_SAMPLE_RATE=22050
GTTS_FORMAT=wav

# ===================== Reference Audio Configuration =====================

# Default reference audio file (from simple_tts_test.py)
REFERENCE_VOICE_PATH=00005.wav
FALLBACK_SPEAKER=Tammie Ema

# ===================== Streaming Configuration =====================

# WebSocket streaming settings
WS_STREAMING_ENABLED=true
WS_CHUNK_SIZE=1024
WS_BUFFER_SIZE=4096
WS_STREAM_DELAY=0.1

# Concurrent streaming limits
MAX_CONCURRENT_STREAMS=10
MAX_STREAMERS=5

# ===================== Performance Optimization =====================

# Enable real-time optimizations
REALTIME_OPTIMIZATION=true
PRELOAD_MODELS=true
WARMUP_ENABLED=true
PARALLEL_PROCESSING=true

# Memory management
CACHE_ENABLED=true
CACHE_SIZE=100
CACHE_TTL=3600

# ===================== Logging Configuration =====================

# TTS logging level
TTS_LOG_LEVEL=INFO
STREAMING_LOG_LEVEL=INFO

# Enable detailed logging
TTS_VERBOSE_LOGGING=false
STREAMING_VERBOSE_LOGGING=false

# ===================== Development Configuration =====================

# Development mode settings
DEV_MODE=true
DEBUG_TTS=false
DEBUG_STREAMING=false

# Test configuration
TEST_TTS_ENABLED=true
TEST_STREAMING_ENABLED=true
TEST_REFERENCE_AUDIO=00005.wav

# ===================== Production Configuration =====================

# Production settings (set TTS_ENVIRONMENT=production to use these)
# TTS_ENVIRONMENT=production
# TTS_SYSTEM=coqui
# DEV_MODE=false
# DEBUG_TTS=false
# DEBUG_STREAMING=false
