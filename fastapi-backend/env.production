# ===================================================================
# SHCI Voice Assistant - PRODUCTION Configuration (LIVE SERVER)
# ===================================================================
# 
# This file is configured for LIVE/PRODUCTION deployment.
# Copy this to .env for production server.
# 
# Environment: PRODUCTION (GPU optimized)
# Last Updated: September 14, 2025
# ===================================================================

# ===================================================================
# APPLICATION ENVIRONMENT (PRODUCTION)
# ===================================================================
# PRODUCTION environment settings for live server
TTS_ENVIRONMENT=production
ENVIRONMENT=production
NODE_ENV=production

# ===================================================================
# LLM CONFIGURATION
# ===================================================================
# Self-hosted LLM API configuration
LLM_API_URL=http://69.197.183.130:11434/v1/chat/completions
LLM_MODEL=huihui-24b:Q4_K_M
LLM_API_KEY=
LLM_TIMEOUT=60.0
LLM_RETRIES=3

# ===================================================================
# TTS SYSTEM CONFIGURATION
# ===================================================================
# TTS System Selection: piper (recommended) or fallback
TTS_SYSTEM=piper

# ===================================================================
# PIPER TTS CONFIGURATION (CPU-ONLY OPTIMIZED)
# ===================================================================
# Model Configuration
PIPER_MODEL_NAME=en_GB-cori-medium
PIPER_LENGTH_SCALE=0.5
PIPER_NOISE_SCALE=0.667
PIPER_NOISE_W=0.8

# Device Configuration (CPU-ONLY - FORCED)
PIPER_DEVICE=cpu
PIPER_FORCE_CPU=true
CUDA_VISIBLE_DEVICES=""

# Thread optimization for Intel Xeon (12 cores)
OMP_NUM_THREADS=8
MKL_NUM_THREADS=8
NUMEXPR_NUM_THREADS=8

# Disable all GPU-related optimizations
TORCH_CUDA_ALLOC_CONF=""
CUDA_CACHE_DISABLE=1

# ===================================================================
# AUDIO CONFIGURATION
# ===================================================================
# Audio output settings
TTS_OUTPUT_FORMAT=wav
TTS_SAMPLE_RATE=22050
DEFAULT_LANGUAGE=en

# ===================================================================
# VOICE ACTIVITY DETECTION (VAD)
# ===================================================================
# Voice detection parameters (production optimized)
TRIGGER_VOICED_FRAMES=2
END_SILENCE_MS=250
MAX_UTTER_MS=7000
MIN_UTTER_SEC=0.25
MIN_RMS=0.006

# ===================================================================
# CONCURRENCY CONFIGURATION (PRODUCTION)
# ===================================================================
# Higher concurrency for production workload
STT_CONCURRENCY=2
TTS_CONCURRENCY=2

# ===================================================================
# ASSISTANT CONFIGURATION
# ===================================================================
# Assistant identity
ASSISTANT_NAME=Self Hosted Conversational Interface
ASSISTANT_AUTHOR=NZR DEV

# ===================================================================
# DATABASE CONFIGURATION
# ===================================================================
# Memory database directory
MEM_DB_DIR=memdb

# ===================================================================
# PRODUCTION OPTIMIZATIONS
# ===================================================================
# Production-specific settings
DEV_MODE=false
DEBUG_TTS=false
DEBUG_STREAMING=false
TTS_VERBOSE_LOGGING=false

# ===================================================================
# NOTES FOR PRODUCTION
# ===================================================================
# 1. TTS_ENVIRONMENT=production automatically uses GPU if available
# 2. Higher concurrency limits for production workload
# 3. Debugging disabled for better performance
# 4. GPU acceleration enabled for faster TTS synthesis
# 5. Production-optimized audio parameters
# 6. All paths are relative to the project root
# 7. Database files are created automatically
# 8. TTS models are downloaded automatically on first use
# ===================================================================
